function addMessage(messagePartial) {
  var messagesContainer = document.querySelector('.messages');
  messagesContainer.insertAdjacentHTML('beforeend', messagePartial)
  var input = document.querySelector('#message_content');
  input.value = '';
  input.blur();
}

<% if @message.errors.any?%>
  console.log("im the response");
<% else %>
  addMessage('<%= j render "message" , message: @message, index: @conversation.messages.index(@message), owner: true %>');
  scrollLastMessageIntoView();
<% end %>

