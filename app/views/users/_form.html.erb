<div class="edit-form">
  <%= simple_form_for @user do |f| %>
    <%= f.file_field :photo, :label=> "Upload your profile picture" %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :first_name, required: false, input_html: { class: "first-name" } %>
    <%= f.input :last_name, required: false %>
    <%= f.input :country, as: :string, required: false %>
    <%= f.association :interests, as: :check_boxes %>
    <%= f.input :description %>
    <%= f.button :submit, class: "jd-solid-button-med" %>
  <% end %>


  <%= link_to edit_user_registration_path do %>
      <button type="button" class="jd-border-button-med">Update password</button>
  <% end %>
</div>

